NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=

TELEGRAM_BOT_TOKEN=
TELEGRAM_BOT_USERNAME=
NEXT_PUBLIC_APP_URL=
TELEGRAM_MINIAPP_MAX_AGE_SEC=86400

# Telebirr
# Base URL example: https://196.188.120.3:38443/apiaccess/payment/gateway
# Do not set this to web checkout endpoints like /payment/web/paygate or /toTradeWebPay.
TELEBIRR_API_URL=https://196.188.120.3:38443/apiaccess/payment/gateway
# Optional: server-side proxy/relay base URL for Telebirr API calls (token/preOrder/verify/status).
# Useful when your host cannot reach Telebirr directly.
TELEBIRR_GATEWAY_PROXY_URL=https://pay-proxy.yourdomain.com/apiaccess/payment/gateway
# If your portal provides only Fabric App ID + App Secret, set API_KEY to Fabric App ID.
TELEBIRR_API_KEY=
TELEBIRR_FABRIC_APP_ID=
TELEBIRR_APP_SECRET=
# Multiline RSA key. In Vercel, paste with literal \n between lines.
TELEBIRR_PRIVATE_KEY=
TELEBIRR_MERCHANT_ID=
TELEBIRR_MERCHANT_CODE=
TELEBIRR_TRADE_TYPE=Checkout
TELEBIRR_CHECKOUT_URL=
# Optional override for token endpoint.
TELEBIRR_TOKEN_PATH=/payment/v1/token
# Optional absolute token endpoint override (takes precedence over TELEBIRR_TOKEN_PATH).
# Example: https://developerportal.ethiotelebirr.et:38443/payment/v1/token
TELEBIRR_TOKEN_URL=
# Optional override for merchant create-order endpoint path(s), comma-separated.
TELEBIRR_INITIATE_PATHS=/merchant/preOrder,/payment/v1/merchant/preOrder
# Optional override for web payment redirect endpoint.
# Use the checkout page endpoint, not the API gateway base.
TELEBIRR_WEB_CHECKOUT_URL=https://196.188.120.3:38443/payment/web/paygate
# Alias used by some Telebirr docs/Postman exports (e.g. https://developerportal.ethiotelebirr.et:38443/payment/web/paygate)
WEB_BASE_URL=
TELEBIRR_WEB_CHECKOUT_PATHS=/payment/web/paygate,/toTradeWebPay,/payment/gateway/toTradeWebPay
TELEBIRR_CALLBACK_SECRET=
TELEBIRR_INSECURE_TLS=false
# Signature mode: `pkcs1` (default) or `pss` (SHA256withRSAandMGF1 style)
TELEBIRR_SIGN_MODE=pkcs1
# Optional network tuning for slow/filtered routes to Telebirr.
TELEBIRR_CONNECT_TIMEOUT_MS=30000
TELEBIRR_REQUEST_TIMEOUT_MS=60000
TELEBIRR_DEMO_MODE=false
